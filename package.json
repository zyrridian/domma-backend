{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc && npm run postbuild",
    "postbuild": "cp -r node_modules/@prisma/client/runtime dist/ || copy node_modules\\@prisma\\client\\runtime dist\\",
    "vercel-build": "prisma generate && tsc",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema ./prisma/schema.prisma",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "@hapi/vision": "^7.0.3",
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "hapi-swagger": "^17.3.2",
    "joi": "^17.13.3",
    "midtrans-client": "^1.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/hapi__joi": "^17.1.15",
    "@types/node": "^22.14.1",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.5.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
